{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/**.test.*"]
}
